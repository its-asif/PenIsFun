{
  "manifest_version": 3,
  "name": "PenIsFun",
  "short_name": "Pen Is Fun",
  "version": "2.0",
  "description": "Draw, erase, and annotate on any web page!",
  "minimum_chrome_version": "88",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Draw on Screen",
    "default_icon": "assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      }
    }
  },
  "homepage_url": "https://github.com/its-asif/PenIsFun"
}
